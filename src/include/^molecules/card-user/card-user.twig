<div class="card-user">
    <div class="card-user__bg">
        {% view '@image' with {
            image: card.image
        } %}
    </div>
    <div class="card-user__content">
        <div class="card-user-head">
            {% if card.name %}
                <div class="card-user-head__name">
                    {{ card.name }}
                </div>
            {% endif %}

            {% if card.status %}
                <div class="card-user-head__status">
                    {{ card.status }}
                </div>
            {% endif %}
        </div>
        <div class="card-user-bottom">
             {% if card.alt and not card.image is defined %}
                <div class="card-user-bottom__alt">
                    {{ card.alt }}
                </div>
            {% endif %}
        </div>
    </div>
</div>