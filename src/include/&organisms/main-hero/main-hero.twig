<div class="main-hero" data-main-hero>
	<div class="main-hero__inner" data-slider>
		{% for slide in hero.slides %}
			<div class="main-hero__slide{{ slide.overlay ? ' has-overlay' : '' }}{% if loop.index == 1 %} is-active{% endif %}"
				data-slide>
				<div class="main-hero__wrap">
					<div class="main-hero__image">
						{% if slide.image.tab or slide.image.mob %}
							{% view '@image-adaptive' with {
								image: slide.image
							} %}
						{% else %}
							{% view '@image' with {
								image: slide.image
							} %}
						{% endif %}
					</div>
					<div class="main-hero__container container">
						<div class="main-hero__content">
							<h2 class="main-hero__title h1">{{ slide.title }}</h2>
							{% if slide.action %}
								<div class="main-hero__action">
									{% view '@button' with {
										button: slide.action
									} %}
								</div>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
	<div class="main-hero__bottom">
		<div class="main-hero__container container">
			<div class="main-hero__numbers">
				{% for slide in hero.slides %}
					<button type="button"
							class="main-hero__number">{% if loop.index < 10 %}0{% endif %}{{ loop.index }}</button>
				{% endfor %}
			</div>
			<div class="main-hero__arrows">
				{% view '@nav-arrows' %}
			</div>
		</div>
	</div>
</div>
