<div class="block-comm {% if block_comm.bg %} bg-{{ block_comm.bg }}{% else %} bg-white{% endif %}">
    <div class="block-comm__container container">
        {% if block_comm.title %}
            <h2 class="block-comm__title h2">
                {{ block_comm.title }}
            </h2>
        {% endif %}
        <div class="block-comm__wrap">
            {% if block_comm.items %}
                {% for card in block_comm.items %}
                    <div class="block-comm__el">
                        {% view "^card-comm" with {
                            card: card
                        } %}
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        {% view "^socials" with {
            socials: block_comm.socials
        } %}
    </div>
</div>