<div class="block-news{% if block.bg %} bg-{{ block.bg }}{% else %} bg-white{% endif %}" data-tabs-wrap>
	<div class="block-news__container container">
		{% if block.title %}
			<h2 class="block-news__title" data-fade-in-up>{{ block.title }}</h2>
		{% endif %}
		<div class="block-news__content">
			{% if block.tabs %}
				<div class="block-news__tabs">
					{% view '&tabs' with {
						tabs: block.tabs
					}%}
				</div>
			{% endif %}
			{% if block.tabs_content %}
				<div class="block-news__tabs-content">
					{% for item in block.tabs_content %}
						<div class="block-news__pane{{ item.active ? ' is-active' }}" data-tab-pane="{{ loop.index }}" data-fade-in-up>
							{% if item.cards %}
								<div class="block-news__cards">
									{% for card in item.cards %}
										<div class="block-news__card">
											<div data-fade-in-up data-delay="{{ (0.2 + loop.index0 / 5)|round(2, 'floor') }}">
												{% view '^card-news' with {
													card: card
												}%}
											</div>
											<div class="block-news__card-border" style="--delay: {{ (0.2 + loop.index0 / 5)|round(2, 'floor') }}"></div>
										</div>
									{% endfor %}
								</div>
							{% endif %}
						</div>
					{% endfor %}
				</div>
			{% endif %}
		</div>
	</div>
</div>
