<div class="block-intro">
    <div class="block-intro__container">
        <div class="block-intro__wrapper">
            {% if block_intro.factoids %}
                <div class="block-intro__left">
                    {% for factoid in block_intro.factoids %}
                        {% view '^factoid' with {
                            factoid: factoid
                        } %}
                    {% endfor %}
                </div>
            {% endif %}
            {% if block_intro.items %}
                <div class="block-intro__right">
                    {% for item in block_intro.items %}
                        <div class="block-intro__item h3">
                            {{item}}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </div>
</div>