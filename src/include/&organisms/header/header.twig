<header class="header" role="banner">
	<div class="header__container container">
		{% if header.logo.href %}
			<a class="header__logo" href="{{ header.logo.href }}">
				{% view '@icon' with {
					icon: header.logo
				} %}
			</a>
		{% else %}
			<div class="header__logo header__logo--active">
				{% view '@icon' with {
					icon: header.logo
				} %}
			</div>
		{% endif %}
		<div class="header__content">
			<nav class="header__navigation">
				<ul class="header__list">
					{% for link in header.navigation %}
						<li class="header__item">
							{% if link.active %}
								<span class="header__link header__link--active">{{ link.text }}</span>
							{% else %}
								<a href="{{ link.href }}"
								   class="header__link"{% if link.external %} target="_blank"{% endif %}>{{ link.text }}</a>
							{% endif %}
						</li>
					{% endfor %}
				</ul>
			</nav>
			{% if header.lang %}
				<div class="header__lang">
					{% view '@lang-toggle' with {
						toggle: header.lang
					} %}
				</div>
			{% endif %}
			<button type="button" class="header__toggle">
				<span></span>
				<span></span>
				<span></span>
			</button>
		</div>
	</div>
</header>
