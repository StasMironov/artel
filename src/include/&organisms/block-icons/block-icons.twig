<div class="block-icons mt-64 mt-md-112 mb-64 mb-md-120">
	<div class="block-icons container">
		{% if block_icons.heading %}
			<div class="block-icons__top">
				<p class="block-icons__heading h2">{{ block_icons.heading }}</p>
			</div>
		{% endif %}
		<div class="block-icons__items" data-fade-in-up>
			{% for item in block_icons.items %}
				<div class="block-icons__item" {% if item.attr %} {{ item.attr }} {% endif %}>
					{% if item.icon %}
						<div class="block-icons__icon" data-icon="draw">
							{% view '@icon' with {
                                icon: item.icon
                            } %}
						</div>
					{% endif %}

					{% if item.text %}
						<p class="block-icons__text">{{ item.text }}</p>
					{% endif %}
				</div>
			{% endfor %}
		</div>
	</div>
</div>
