<div class="block-managment container">
	<div class="block-managment__wrapper">

		<div class="block-managment__left" data-fade-in-up>
			{% if block.heading %}
				<h2 class="block-managment__heading h2">{{ block.heading }}</h2>
			{% endif %}
		</div>

		{% for description in block.descriptions %}
			<div class=" block-managment__right" data-fade-in-up data-delay="0.3">
				{% if description.title %}
					<h2 class="block-managment__title h3">
						{{ description.title }}
					</h2>
				{% endif %}

				{% if description.read_more %}
					{% view '^read-more' with {
							card: description.read_more
					}%}
				{% endif %}
			</div>
		{% endfor %}
	</div>
</div>
