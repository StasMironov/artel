<div class="block-inform {% if block_inform.bg %} bg-{{ block_inform.bg }}{% else %} bg-white{% endif %}">
    <div class="block-inform__container container">
        <div class="block-inform__top">
                {% if block_inform.title %}
                    <div class="block-inform__title h1" data-fade-in-up>
                        {% for item in block_inform.title %}
                            <div class="block-inform__line">{{ item }}</div>
                        {% endfor %}
                    </div> 
                {% endif %}
        </div>
        <div class="block-inform__bottom">
            <div class="block-inform__left">
                <div class="block-inform__icon" data-fade-in-up data-delay="0.5">
					{% view '@icon-text' with {
						icon: block_inform.icon
					} %}
                </div>
            </div>
            <div class="block-inform__right">
                {% if block_inform.desc %}
                    <div class="block-inform__desc" data-fade-in-up data-delay="0.5">
                        {{ block_inform.desc }}
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>