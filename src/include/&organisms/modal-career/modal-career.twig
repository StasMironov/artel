<div class="modal-career">
    <div class="modal-career__wrapper" data-modal-ps>
        {% if modal.title %}
            <div class="modal-career__title h1">
                {{modal.title}}
            </div>
        {% endif %}
        {% if modal.form %}
            <form id="{{modal.form.id}}" class="modal-career__form" action="{{modal.form.action}}" {% if modal.attr %}{{modal.attr}}{% endif %} novalidate="novalidate">
                <div class="modal-career__inner" >

                    {% if modal.form.tabs %}
                        {% for card in modal.form.tabs %}
                            {% if card.pag %}
                                {{ card.pag }}
                            {% endif %}
                            {# {% if tab.fields %} #}
                                <section>
                                {% if card.component and card.data %}
                                    <div>
                                        {% view card.component with {card: card.data} %}
                                    </div>
                                {% endif %}
                                    {# {% for field in tab.fields %}
                                        <div class="form__field{% if field.textarea %} form__field--fit{% endif %}" data-fade-in-up data-delay="{{ (0.2 + loop.index0 / 5)|round(2, 'floor') }}">
                                            {% view '@field' with {
                                                field: field
                                            } %}
                                        </div>
                                    {% endfor %} #}
                                </section>
                            {# {% endif %} #}
                        {% endfor %}
                    {% endif %}
                </div>
            </form>
        {% endif %}
    </div>
</div>