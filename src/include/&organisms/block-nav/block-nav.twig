<div class="block-nav{% if block_nav.slim %} block-nav--slim{% endif %}{% if block_nav.bg %} bg-{{ block_nav.bg }}{% else %} bg-white{% endif %}" data-nav-wrap>
    <div class="block-nav__container container">
        <div class="block-nav__wrap">
            <div class="block-nav__left">
                {% if block_nav.links  %}
                    <ul class="block-nav-list" data-nav-list>
                        {% for item in block_nav.links %}
                            <li class="block-nav-list__item{% if item.active %} is-active{% endif %}" data-fade-in-up data-delay="" data-nav-item>
                                <a class="block-nav-list__link {% if item.active %}block-nav-list__link--active{% endif %}" href="{% if item.href %}{{item.href}}{% endif %}">
                                    {% if item.text %}
                                        {{ item.text }}
                                    {% endif %}
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
            <div class="block-nav__right">
                <div class="block-nav-decor">
                    {% view '@icon' with {
                        icon: block_nav.icon
                    } %}
                </div>
                <div class="block-nav-info">
                    {% if block_nav.desc  %}
                        <div class="block-nav-info__desc h3" data-fade-in-up data-delay="0.5">
                            {{ block_nav.desc }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
